{
  "name": "figma-plugin-mockup-studio",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "run-s dev",
    "dev": "run-s watch",
    "dev:ui-only": "vite -c ./vite.config.ui.ts",
    "watch": "run-p watch:*",
    "watch:ui": "npm run build:ui -- --watch --mode=development",
    "watch:plugin": "npm run build:plugin -- --watch --mode=development",
    "clean": "rimraf dist",
    "types": "run-s types:*",
    "types:src": "tsc",
    "types:node": "tsc -P tsconfig.node.json",
    "build": "run-s build:*",
    "prebuild": "run-s types clean",
    "build:ui": "vite build -c ./vite.config.ui.ts",
    "build:plugin": "vite build -c ./vite.config.plugin.ts",
    "test:dev-server": "vite -c ./vite.config.ui.ts --mode=testing",
    "test:ui": "playwright test --ui"
  },
  "dependencies": {
    "antd": "^5.22.3",
    "mobx": "^6.13.5",
    "mobx-react-lite": "^4.1.0",
    "monorepo-networker": "^2.0.0",
    "pixi.js": "^8.6.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.0.2",
    "svg-path-commander": "^2.1.7"
  },
  "devDependencies": {
    "@ant-design/v5-patch-for-react-19": "^1.0.3",
    "@figma/plugin-typings": "^1.104.0",
    "@pixi/devtools": "^2.0.1",
    "@playwright/test": "^1.49.1",
    "@types/node": "^22.10.1",
    "@types/postcss-url": "^10.0.4",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "postcss-url": "^10.1.3",
    "rimraf": "^6.0.1",
    "sass": "^1.82.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-generate-file": "^0.2.0",
    "vite-plugin-react-rich-svg": "^1.2.0",
    "vite-plugin-singlefile": "^2.1.0"
  }
}
